<% content_for :sidebar do %>
  <div data-hook="homepage_sidebar_navigation">
    <%= render :partial => 'spree/shared/taxonomies' %>
  </div>
<% end %>

<div id="triple-top">
	<div class="row">
		<div class="col-md-6 categories-left">
			<a style="position:relative;" href="/t/printer-slash-fax-slash-copier-supplies/inkjet-cartridges">
				<%= image_tag("cartridges-1.jpg") %>
			</a>
			<a style="position:relative;" href="/t/printer-slash-fax-slash-copier-supplies/inkjet-cartridges">
				<%= image_tag("cartridges-2.jpg") %>
			</a>
		</div>
		<div class="col-md-6 categories-right">
			<a style="position:relative;" href="/t/printer-slash-fax-slash-copier-supplies/inkjet-cartridges">
				<%= image_tag("cartridges-3.jpg") %>
			</a>
		</div>
	</div>
</div>

<div class="content-products">
	<ul class="bxslider>
		<li class="sale clearfix">
			<div class="row">
				<div class="title">
		        	<hr class="sale">
		    	</div>
				<% @products.where(sale: true).each do |e| %>
				  <div class="col-sm-6 col-md-3">
				    <div class="thumbnail">
				      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
				      <div class="caption">
				        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
				        <p><%= link_to e.ts_code, e %></p>
				        <p><button class="btn btn-primary">€<%= link_to e.price, e %></button></p>
				      </div>
				    </div>
				  </div>
				<% end %>
			</div>
		</li>

		<li class="featured clearfix">
			<div class="row">
				<div class="title">
		        	<hr class="featured">
		    	</div>
				<% @products.where(featured: true).each do |e| %>
				  <div class="col-sm-6 col-md-3">
				    <div class="thumbnail">
				      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
				      <div class="caption">
				        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
				        <p><%= link_to e.ts_code, e %></p>
				        <p><button class="btn btn-primary">€<%= link_to e.price, e %></button></p>
				      </div>
				    </div>
				  </div>
				<% end %>
			</div>
		</li>

		<li class="latest clearfix">
			<div class="row">
				<div class="title">
		        	<hr class="latest">
		    	</div>
				<% @products.where(latest: true).each do |e| %>
				  <div class="col-sm-6 col-md-3">
				    <div class="thumbnail">
				      <%= link_to image_tag('http://ts.liveofficedata.co.uk/' + e.image_url), e %>
				      <div class="caption">
				        <h4><%= link_to truncate(e.name, length: 80), e %></h4>
				        <p><%= link_to e.ts_code, e %></p>
				        <p><button class="btn btn-primary">€<%= link_to e.price, e %></button></p>
				      </div>
				    </div>
				  </div>
				<% end %>
			</div>
		</li>
	</ul>
</div>