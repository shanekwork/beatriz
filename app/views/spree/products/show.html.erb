<% @body_id = 'product-details' %>

<% cache [I18n.locale, current_currency, @product, @product.possible_promotions] do %>
  <div data-hook="product_show" itemscope itemtype="https://schema.org/Product">
    <h1 class="product-title" itemprop="name"><%= @product.name %></h1>
    <div class="col-md-4" data-hook="product_left_part">
      <div data-hook="product_left_part_wrap">
        <div id="product-images" data-hook="product_images">
          <div id="main-image" class="panel panel-default" data-hook>
            <div class="panel-body text-center">
              <%= render :partial => 'image' %>
            </div>
          </div>
          <div id="thumbnails" data-hook>
            <%= render :partial => 'thumbnails' %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-8" data-hook="product_right_part">
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description">
          <div class="product-properties col-xs-12 col-md-12">
            <div class="col-xs-12 col-md-6">              
              <div class="product-text-properties" data-hook="product_properties">
                <div>
                  <span><strong>Sku: </strong><%= @product.ts_code %></span>
                </div>
                <div>
                  <span><strong>Colour: </strong><%= @product.colour %></span>
                </div>
                <div>
                  <span><strong>Page Yield: </strong><%= @product.page_yield %></span>
                </div>
                <div>
                  <span><strong>Machine Models: </strong><%= @product.machine_models %></span>
                </div>
              </div>
              <div class="promotions" data-hook="promotions">
                <%= render :partial => 'promotions' %>
              </div>
            </div>

            <div class="buy-block col-xs-12 col-md-6">
              <div id="cart-form" data-hook="cart_form" class="col-xs-12 col-md-12" itemprop="after-fav">
                <%= render :partial => 'cart_form' %>
              </div>
            </div>
          </div>
          <div class="well product-text-description col-xs-12 col-md-12" itemprop="description" data-hook="description">
            <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
          </div>       
        </div>

        <%= render :partial => 'taxons' %>
      </div>
    </div>
  </div>
<% end %>
