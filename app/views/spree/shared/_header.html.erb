<header id="header" class="col-xs-12 col-md-2" data-hook>
  <div class="row">
    <div class="user-menu col-xs-12 col-md-12">
      <div class="navbar">
        <%= render :partial => 'spree/shared/nav_bar' %>
      </div>
    </div>

    <div class="phone-box col-xs-12 col-md-12">
      <i class="fa fa-phone"></i>
      <% if @add.nil? %>
      
      <% else %>
        <%= @add.phone %>
      <% end %>
    </div>

    <figure id="logo" class="col-xs-12 col-md-12" data-hook>
      <%= logo %>
    </figure>
    
    <div id="link-to-cart" class="col-xs-12 col-md-12" data-hook>
        <%= link_to Spree.t(:cart), '/cart' %>
      <script>Spree.fetch_cart()</script>
    </div>

    <div class="col-xs-12 col-md-12">
      <hr class="hr--small">
    </div>
    
    <div class="main-menu col-xs-12 col-md-12">
      <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
    </div>

    <div class="search-box col-xs-12 col-md-12">
      <%= render :partial => 'spree/shared/search' %>
    </div>
  </div>
</header>
